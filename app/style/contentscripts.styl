@charset "utf-8"

@keyframes fade-in
  from
    opacity: 0
  to
    opacity: 1

#chrome-extension-jogi
  z-index: 99999999999
  height: 0
  animation: fade-in .25s linear

$common-jogi
  position: fixed
  left: 0
  top: 0
  width: 100vw
  cursor: move
$common-pseudo
  content: ""
  position: absolute
  display: block
  width: inherit

#jogi
  &
    @extend $common-jogi
    height: 34px
    border: 1px solid rgba(0,0,0,0.1)
    background: rgba(255,255,255, .95) linear-gradient(top, transparent 21px, rgba(0,0,0,.21) 21px, rgba(0,0,0,.21) 22px, rgba(0,0,0,.05) 22px, rgba(0,0,0,.05) 24px, transparent 24px)
    box-shadow: 0px 4px 5px -4px rgba(0,0,0,0.4), 0 0 3px -1px rgba(0,0,0,0.4)
  &:before
    @extend $common-pseudo
    top: 24px
    height: 10px
    background: linear-gradient(left, transparent 47%, lighten(#bbb, 15) 47%, lighten(#bbb, 15) 50%, transparent 50%, transparent 97%, #bbb 97%) / 1cm
  &:after
    @extend $common-pseudo
    top: 18px
    height: 3px
    background: radial-gradient(center, circle, #bbb 8%, transparent 8%) 18px center
    background-size: 1cm

#jogi-cover
  @extend $common-jogi
  display: none
  height: 100vh
