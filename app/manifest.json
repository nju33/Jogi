{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.0.0.2",
  "default_locale": "ja",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon/icon_16.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  },
  "browser_action": {
    "default_icon": {"38": "icon/icon_38.png"},
    "default_title": "Create Jogi"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["style/contentscripts.css"],
      "js": ["script/contentscripts.js"]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["script/background.js"]
  }
}
